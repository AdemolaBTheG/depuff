{
  "expo": {
    "name": "depuff",
    "slug": "depuff",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",

    "scheme": "depuff",
    "userInterfaceStyle": "dark",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.depuff.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to access your camera",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "predictiveBackGestureEnabled": false,
      "permissions": ["android.permission.CAMERA"]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-font",
      "expo-image",
      "expo-secure-store",
      "expo-sharing",
      "expo-sqlite",
      "expo-web-browser",
      "expo-localization",
      [
        "expo-widgets",
        {
          "bundleIdentifier": "com.depuff.app.widgets",
          "groupIdentifier": "group.com.depuff.app",
          "enablePushNotifications": false,
          "widgets": [
            {
              "name": "HydrationFlushWidget",
              "displayName": "Hydration Flush",
              "description": "Log hydration from the home screen and view flush status.",
              "supportedFamilies": ["systemSmall", "systemMedium"]
            }
          ]
        }
      ],
      "react-native-vision-camera",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "16.2"
          }
        }
      ],
      "expo-video"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "build": {
          "experimental": {
            "ios": {
              "appExtensions": [
                {
                  "targetName": "ExpoWidgetsTarget",
                  "bundleIdentifier": "com.depuff.app.widgets",
                  "entitlements": {
                    "com.apple.security.application-groups": ["group.com.depuff.app"]
                  }
                }
              ]
            }
          }
        },
        "projectId": "949b5347-9bde-4d72-99a4-a2f8e3ccbe99"
      }
    }
  }
}
